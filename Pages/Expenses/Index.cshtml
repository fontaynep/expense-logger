@page
@model ExpenseLogger.Pages.Expenses.IndexModel
@{
    ViewData["Title"] = "Expenses";
}

<h1 class="mb-4">All Expenses</h1>

<a class="btn btn-primary mb-3" href="/Expenses/Create">+ Add New Expense</a>

@if (Model.Expenses.Count == 0)
{
    <div class="alert alert-info">No expenses recorded yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.Description</td>
                    <td>@expense.Amount.ToString("C")</td>
                    <td>@expense.Date.ToShortDateString()</td>
                    <td>@expense.Category</td>
                </tr>
            }
        </tbody>
    </table>
}

